<phone:PhoneApplicationPage
    x:Class="QuranPhone.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerikPrimitives="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Primitives"
    mc:Ignorable="d"
    xmlns:myui="clr-namespace:QuranPhone.UI"
    xmlns:controls="clr-namespace:Phone.Controls;assembly=Phone.Controls"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:abu="clr-namespace:AppBarUtils;assembly=AppBarUtils"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="PortraitOrLandscape" Orientation="Portrait"
    shell:SystemTray.IsVisible="{Binding IsShowMenu}"
    MouseLeftButtonUp="ScreenTap"
    Background="{StaticResource LightBackground}" OrientationChanged="PageOrientationChanged">
    
    <phone:PhoneApplicationPage.Resources>
        <myui:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <myui:TextFormatConverter x:Key="TextFormatConverter"/>
    </phone:PhoneApplicationPage.Resources>
    <Grid Name="MainContainer" Background="{StaticResource LightBackground}">
        <telerikPrimitives:RadSlideView x:Name="radSlideView" IsFilmstripModeEnabled="True" 
                                        ItemsSource="{Binding Pages}" IsLoopingEnabled="True" 
                                        ItemRealizationMode="ViewportItem">
            <telerikPrimitives:RadSlideView.ItemTemplate>
                <DataTemplate>
                     <Grid>
                         <myui:CachedImage ImageSource="{Binding ImageSource}" PageNumber="{Binding PageNumber}" 
                                              Visibility="{Binding ShowTranslation, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                         <controls:ScrollableTextBlock Text="{Binding Translation}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="{Binding TextSize}" DesiredWidth="{Binding ScreenWidth}" Foreground="Black" Margin="12,0" Visibility="{Binding ShowTranslation, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="{StaticResource LightBackground}">
                            <TextBlock Text="{Binding SuraName}" HorizontalAlignment="Left" FontSize="18" Foreground="Black" Margin="10,0,0,5"/>
                            <TextBlock Text="{Binding PageNumber}" HorizontalAlignment="Center" FontSize="18" Foreground="Black" Margin="0,0,0,5"/>

                            <TextBlock Text="{Binding JuzName}" HorizontalAlignment="Right" FontSize="18" Foreground="Black" Margin="0,0,75,5"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </telerikPrimitives:RadSlideView.ItemTemplate>
            <telerikPrimitives:RadSlideView.FilmstripModeItemTemplate>
                <DataTemplate>
                    <Grid Width="80" Height="130" Margin="10">
                        <Border BorderThickness="2" BorderBrush="{StaticResource DarkBlueText}" Padding="10">
                            <Image Source="Assets/Images/page-small.png"></Image>
                        </Border>
                        <TextBlock Text="{Binding PageNumber}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="{StaticResource DarkBlueText}"/>
                    </Grid>
                </DataTemplate>
            </telerikPrimitives:RadSlideView.FilmstripModeItemTemplate>
        </telerikPrimitives:RadSlideView>

        <Grid x:Name="infoPanel" VerticalAlignment="Top" Visibility="{Binding IsShowInfoPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2" Grid.RowSpan="2" Background="White" Opacity="0.9"/>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Top" 
                           TextAlignment="Center"
                           Text="p." 
                           Margin="15,15,0,0"
                           Foreground="{StaticResource DarkBlueText}" 
                           FontSize="30"/>
                <TextBlock VerticalAlignment="Top" 
                           TextAlignment="Center"
                           Text="{Binding CurrentPageNumber}" 
                           Margin="5,15"
                           Foreground="{StaticResource DarkBlueText}" 
                           FontSize="30"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Grid Margin="10,10,10,0">
                        <Path Fill="#FFFFFFFF" Stroke="{StaticResource DarkBlueText}" Data="F1 M81.3125,0.5 L57.65625,24.15625 24.15625,24.15625 24.15625,57.65625 0.5,81.3125 24.15625,104.96875 24.15625,138.4375 57.625,138.4375 81.3125,162.125 105,138.4375 138.46875,138.4375 138.46875,104.96875 162.125,81.3125 138.46875,57.65625 138.46875,24.15625 104.96875,24.15625 81.3125,0.5 z" Margin="0" Height="48.625" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Left" Width="48.624" UseLayoutRounding="False"/>
                        <TextBlock VerticalAlignment="Center" 
                                       TextAlignment="Center"
                                       Text="{Binding CurrentSurahNumber}"
                                       Foreground="{StaticResource DarkBlueText}" 
                                       FontSize="22"/>
                    </Grid>
                    <TextBlock VerticalAlignment="Center" 
                               TextAlignment="Center"
                               Text="{Binding CurrentSurahName}" 
                               Margin="0,5,15,0"
                               Foreground="{StaticResource DarkBlueText}" 
                               FontSize="30"/>
                </StackPanel>
                <TextBlock VerticalAlignment="Center" 
                           TextAlignment="Right"
                           Text="{Binding CurrentJuzName}" 
                           Margin="0,-5,15,10"
                           Foreground="{StaticResource DarkBlueText}" 
                           FontSize="20"/>
            </StackPanel>
        </Grid>

        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0" Width="80" Style="{StaticResource ChromelessButtonStyle}" Name="menuToggleButton" Visibility="{Binding IsShowMenu, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" Command="{Binding CommandToggleMenu}">
            <StackPanel Orientation="Horizontal" Background="Transparent" VerticalAlignment="Bottom" Margin="0" Height="50">
                <Ellipse Fill="{StaticResource DarkBlueText}" Width="8" Height="8" Margin="5,0,5,15" VerticalAlignment="Bottom"/>
                <Ellipse Fill="{StaticResource DarkBlueText}" Width="8" Height="8" Margin="5,0,5,15" VerticalAlignment="Bottom"/>
                <Ellipse Fill="{StaticResource DarkBlueText}" Width="8" Height="8" Margin="5,0,5,15" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Button>
    </Grid>
    
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar>
            <shell:ApplicationBarIconButton IconUri="/Assets/Images/search.png" 
                                            Text="Search" Click="Search_Click"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/Images/favorite.png" 
                                            Text="Bookmark" Click="Bookmark_Click"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/Images/appbar.globe.png" 
                                            Text="Translate" Click="Translation_Click"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="Settings" Click="Settings_Click"/>
                <shell:ApplicationBarMenuItem Text="Contact us" Click="ContactUs_Click"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

    <i:Interaction.Behaviors>
        <abu:AppBarPropertyBinder IsVisible="{Binding IsShowMenu}" Opacity="0.9" BackgroundColor="White" ForegroundColor="#FF49A4C5" />
    </i:Interaction.Behaviors>
</phone:PhoneApplicationPage>